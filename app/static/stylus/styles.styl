@import 'fonts'
//colores
c-celeste = #0A6EBD
c-negro = #000000
c-plomo = #2F2F2F
c-plomo-oscuro = #1c2833
c-blanco = #fff
//fuente

lato = 'Lato', sans-serif;
open-san = 'Open Sans', sans-serif;
//clases generales

*
    margin 0px
    padding 0px

ul li
    list-style-type none

a
    text-decoration none
.cnt-general
    width 98%
    max-width 1020px
    margin auto

h2.title
    font-size 32px
    color c-celeste
    font-family lato
    text-align center
    margin-bottom 30px
.cnt-section
    margin 30px 0px
/*********** HEADER ************/

header
    position fixed
    top 0px
    z-index 1100
    padding 10px 0px
    background white
    width 100%
    box-shadow 0px 1px 1px c-plomo
    &:before
        content ""
    .cnt-general
        display flex
        figure
            width 150px
            height 90px
            img
                display block
        nav.menu-principal
            width 100%
            height 90px
            ul
                display flex
                height 100%
                align-items center
                justify-content space-around
                li
                    a
                        color c-negro
                        font-family lato
                        font-size 18px
                        transition .2s all ease
                        font-weight 700
                        &:hover
                            text-decoration underline
                            color c-celeste

section.cnt-slider
    width 100%
    overflow hidden
    margin-top 110px
    margin-bottom 0px
    .slick-dots
        bottom 10px
        .slick-active
            button:before
                color c-celeste !important
        button:before
            color c-blanco !important
            font-size 20px !important
            opacity 1 !important
            transition 0.3s ease all
        button:hover
                &:before
                    color c-celeste !important
    .banner
        .cnt-img
            width 100%
            height 400px
            background-size cover
        .capa
            display flex
            position absolute
            top 0px
            left 0px
            right 0px
            height 100%
            align-items center
            text-align center
            z-index 20
            .cnt-general
                h2
                    color c-blanco
                    font-family lato
                    font-size 28px
        .sombra
            top 0px
            background c-negro
            opacity 0.2
            width 100%
            height 100%
            position absolute
            left 0px
            right 0px
            z-index 10
section.nosotros
    .cnt-general
        .contenido
            display flex
            .texto
                margin-right 20px
                p
                    font-family open-san
                    font-size 16px
            figure
                max-width 500px
                img
                    width 100%
                    height auto
                    display block
section.servicios
    .cnt-servicios
        display flex
        .item
            flex-grow 1
            padding 20px 10px
            text-align center
            background c-plomo
            height 250px
            display flex
            align-items center
            .cnt-contenido
                margin auto
                .icono
                    color white
                    font-size 40px
                h3
                    color c-blanco
                    margin-top 10px
                    font-size  18px
                    font-family lato
