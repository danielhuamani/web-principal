@import 'nib'
/*~~~~~~~~~~~~~COLORES y FUENTE~~~~~~~~~~~~~~~*/

c-blanco = #fff
c-azul = #0A6EBD
c-plomo = #2F2F2F
c-blanco-fondo = #F5F6FA
c-negro = #000

lato = 'Lato', sans-serif;
/***********GENERALES***************/
*
    margin 0
    padding 0

a
    text-decoration inherit
.cnt-general
    max-width 1020px
    width 98%
    margin auto


ul li
    list-style-type none

.subtitle-banner
    font-size 24px
    font-family lato
    color c-blanco
    width 80%
    margin auto
    text-align center


/********** HEADER **********/

header
    background c-blanco-fondo
    position fixed
    top 0px
    margin auto
    right 0px
    left 0px
    z-index 100
    box-shadow 0px 1px 1px c-plomo
